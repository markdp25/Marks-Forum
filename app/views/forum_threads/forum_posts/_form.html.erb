<%= form_for [forum_thread, forum_post] do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
    <div class= 'form-group'>
      <%= f.text_area :body, placeholder: 'Add a comment', rows: 10, class: 'form-control' %>
    </div>
  <div class= 'form-group'>
    <%= f.submit 'Create forum post', method: 'POST' %>
  </div>
  <% end %>

  <div class="row">
  <div class="col-md-4">
    <h4>Markdown Preview</h4>
      <div id="forum_post_preview">
      </div>
  </div>
</div>
