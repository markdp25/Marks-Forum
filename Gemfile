source 'https://rubygems.org'

 # Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
 gem 'rails', '5.1.4'

 gem 'devise'
 gem 'bootstrap-sass'

 group :production do
   gem 'pg'
   gem 'rails_12factor'
 end

 group :development do
   gem 'sqlite3'
   gem 'web-console', '3.5.1'
   gem 'listen'
 end

 gem 'sass-rails'
 gem 'uglifier'
 gem 'coffee-rails'
 gem 'jquery-rails'
 gem 'turbolinks'
 gem 'figaro'
 gem 'sucker_punch'
 gem 'ransack', github: 'activerecord-hackery/ransack'
 gem 'local_time'
 gem 'record_tag_helper', '~> 1.0'

 group :development, :test do
   gem 'byebug'
   gem 'spring'
   gem 'rspec-rails'
   gem 'shoulda'
   gem 'faker'
   gem 'factory_bot_rails'
   gem 'pry-rails'
 end
